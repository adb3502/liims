# =============================================================================
# LIIMS Environment Configuration
# Copy this file to .env and fill in values before running docker-compose up
# =============================================================================

# Database
POSTGRES_PASSWORD=change-me-strong-password
DATABASE_URL=postgresql+asyncpg://liims:change-me-strong-password@postgres:5432/liims
REPLICA_DATABASE_URL=

# Security
SECRET_KEY=generate-a-strong-random-key-here
JWT_EXPIRY_HOURS=24

# ODK Central Integration
ODK_CENTRAL_URL=https://odk.yourdomain.com
ODK_CENTRAL_EMAIL=admin@example.com
ODK_CENTRAL_PASSWORD=
ODK_SYNC_INTERVAL_MINUTES=60

# Email / SMTP (External provider: Gmail or Outlook)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=liims.alerts@gmail.com
SMTP_PASSWORD=
SMTP_FROM_NAME=LIIMS Alerts

# Redis
REDIS_URL=redis://redis:6379

# NAS Mount Path (raw instrument data)
NAS_MOUNT_PATH=/mnt/nas

# Dashboard
DASHBOARD_REFRESH_INTERVAL_MINUTES=15
