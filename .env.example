# =============================================================================
# LIIMS Environment Configuration
# Copy to .env and fill in values before running: docker compose up -d
# =============================================================================

# --- Database ---
POSTGRES_PASSWORD=change-me-strong-password

# --- Security ---
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=generate-a-strong-random-key-here
JWT_EXPIRY_HOURS=24
BCRYPT_ROUNDS=12

# --- Application ---
DEBUG=false
FRONTEND_PORT=80

# --- CORS ---
# JSON array of allowed origins
CORS_ORIGINS=["http://localhost","http://localhost:80"]

# --- ODK Central Integration ---
ODK_CENTRAL_URL=https://odk.yourdomain.com
ODK_CENTRAL_EMAIL=admin@example.com
ODK_CENTRAL_PASSWORD=
ODK_SYNC_INTERVAL_MINUTES=60

# --- Email / SMTP ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=liims.alerts@gmail.com
SMTP_PASSWORD=
SMTP_FROM_NAME=LIIMS Alerts
SMTP_USE_TLS=true

# --- Redis ---
REDIS_URL=redis://redis:6379

# --- NAS Mount Path (raw instrument data, read-only) ---
NAS_MOUNT_PATH=/mnt/nas

# --- File Store ---
FILE_STORE_MAX_SIZE_MB=100

# --- Dashboard ---
DASHBOARD_REFRESH_INTERVAL_MINUTES=15
