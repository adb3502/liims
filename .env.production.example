# =============================================================================
# LIIMS Production Environment Configuration
# Copy to .env and fill in ALL values before deploying.
# Deploy: ./scripts/deploy.sh --prod --seed
# =============================================================================

# --- Database ---
# Use a strong random password (32+ chars)
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_32_CHARS

# --- Security ---
# Generate: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_ME_GENERATE_64_BYTE_RANDOM_KEY
JWT_EXPIRY_HOURS=8
BCRYPT_ROUNDS=12

# --- Application ---
DEBUG=false
FRONTEND_PORT=443

# --- CORS ---
# Set to your actual production domain
CORS_ORIGINS=["https://liims.iisc.ac.in"]

# --- ODK Central Integration ---
ODK_CENTRAL_URL=https://odk.iisc.ac.in
ODK_CENTRAL_EMAIL=liims-odk@iisc.ac.in
ODK_CENTRAL_PASSWORD=CHANGE_ME
ODK_SYNC_INTERVAL_MINUTES=30

# --- Email / SMTP ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=liims.alerts@iisc.ac.in
SMTP_PASSWORD=CHANGE_ME_APP_PASSWORD
SMTP_FROM_NAME=LIIMS Alerts
SMTP_USE_TLS=true

# --- Redis ---
REDIS_URL=redis://redis:6379

# --- NAS Mount Path (raw instrument data, read-only) ---
# Point to the actual NAS mount on the host
NAS_MOUNT_PATH=/mnt/nas

# --- File Store ---
FILE_STORE_MAX_SIZE_MB=500

# --- Dashboard ---
DASHBOARD_REFRESH_INTERVAL_MINUTES=15
